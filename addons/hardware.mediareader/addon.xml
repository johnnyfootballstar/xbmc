<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="hardware.mediareader"
		name="Media Reader Library"
		version="1.0.0"
		provider-name="TeamXBMC">
	<requires>
		<import addon="xbmc.hardware" version="1.0.0"/>
	</requires>
	<extension point="xbmc.hardware"
			has_media_reader="true"
			library_android="MediaReader.so"
			library_linux="MediaReader.so"
			library_osx="MediaReader.so"
			library_windx="MediaReader.dll"
			library_wingl="MediaReader.dll">
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">Media reader library</summary>
		<description lang="en">Media reader library for XBMC's Hardware API</summary>
		<platform>all</platform>
	</extension>
</addon>
